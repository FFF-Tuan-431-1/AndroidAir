<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rain.testhandler.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="26.0â„ƒ"
        android:textSize="30pt"
        android:id="@+id/wtemperature"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R:"
        android:textSize="10pt"
        android:id="@+id/wroom"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/wname"
        android:layout_alignStart="@+id/wname" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N:"
        android:textSize="10pt"
        android:id="@+id/wname"
        android:layout_alignBaseline="@+id/wtemperature"
        android:layout_alignBottom="@+id/wtemperature"
        android:layout_toRightOf="@+id/wtemperature"
        android:layout_toEndOf="@+id/wtemperature" />

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chronometer"
        android:visibility="gone"/>


    <com.gc.materialdesign.views.ButtonRectangle
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tem +"
        android:background="#1E88E5"
        android:id="@+id/button"
        android:layout_below="@+id/wtemperature"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.gc.materialdesign.views.ButtonRectangle
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tem -"
        android:id="@+id/button2"
        android:background="#1E88E5"
        android:layout_alignBottom="@+id/button"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button" />

    <com.gc.materialdesign.views.ButtonRectangle
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="spe +"
        android:id="@+id/button3"
        android:background="#1E88E5"
        android:layout_below="@+id/button"
        android:layout_toRightOf="@+id/chronometer"
        android:layout_toEndOf="@+id/chronometer" />

    <com.gc.materialdesign.views.ButtonRectangle
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="spe -"
        android:id="@+id/button4"
        android:background="#1E88E5"
        android:layout_alignBottom="@+id/button3"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2" />

    <com.gc.materialdesign.views.ButtonRectangle
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bill"
        android:id="@+id/button5"
        android:background="#1E88E5"
        android:layout_above="@+id/button4"
        android:layout_alignRight="@+id/wroom"
        android:layout_alignEnd="@+id/wroom" />

    <com.gc.materialdesign.views.ButtonRectangle
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" off "
        android:id="@+id/button6"
        android:background="#1E88E5"
        android:visibility="gone"
        android:layout_below="@+id/button3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp" />

    <com.gc.materialdesign.views.ButtonRectangle
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" dry "
        android:id="@+id/button7"
        android:visibility="gone"
        android:background="#1E88E5"
        android:layout_below="@+id/button6"
        android:layout_alignRight="@+id/button6"
        android:layout_alignEnd="@+id/button6" />

    <com.gc.materialdesign.views.ButtonRectangle
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" pur "
        android:visibility="gone"
        android:id="@+id/button8"
        android:background="#1E88E5"
        android:layout_below="@+id/button7"
        android:layout_alignLeft="@+id/button7"
        android:layout_alignStart="@+id/button7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mode"
        android:id="@+id/wMode"
        android:layout_below="@+id/switch2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="speed"
        android:id="@+id/wspeed"
        android:layout_below="@+id/button8"
        android:layout_alignLeft="@+id/button8"
        android:layout_alignStart="@+id/button8"
        android:layout_alignRight="@+id/button8"
        android:layout_alignEnd="@+id/button8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/billList"
        android:layout_alignTop="@+id/button4"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignStart="@+id/button5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CurrentTemperature:"
        android:id="@+id/curtem"
        android:layout_below="@+id/button4"
        android:layout_toRightOf="@+id/wtemperature"
        android:layout_toEndOf="@+id/wtemperature" />

    <com.gc.materialdesign.views.Switch

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="off"
        android:textOn="on"
        android:id="@+id/switch1"
        materialdesign:check="false"
        android:layout_below="@+id/wspeed"
        android:layout_alignLeft="@+id/chronometer"
        android:layout_alignStart="@+id/chronometer" />

    <com.gc.materialdesign.views.Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="dry"
        android:textOn="pur"
        android:id="@+id/switch2"
        android:layout_below="@+id/switch1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        materialdesign:check="false"
        android:visibility="invisible"/>

    <com.gc.materialdesign.views.Slider
        android:id="@+id/sliderTem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1E88E5"
        materialdesign:max="30"
        materialdesign:min="18"
        android:layout_above="@+id/sliderSpe"
        materialdesign:showNumberIndicator="true"/>

    <com.gc.materialdesign.views.Slider
        android:id="@+id/sliderSpe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1E88E5"
        materialdesign:max="3"
        materialdesign:min="0"
        android:layout_alignParentBottom="true"
        materialdesign:showNumberIndicator="true"/>


</RelativeLayout>
